{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pug2html": "pug src/ --hierarchy -o public/ -P",
    "watch:pug": "npm run pug2html && chokidar 'src/**/*.pug' -c 'npm run pug2html'",
    "scss2css": "sass src/assets/scss/:public/assets/css/ --style=compressed --no-charset --no-source-map",
    "autoprefixer": "postcss public/assets/css/*.css -u autoprefixer --no-map --replace",
    "watch:css": "run-s scss2css autoprefixer && chokidar src/assets/scss/ -c 'run-s scss2css autoprefixer'",
    "babel:js": "babel src/assets/js/ --out-dir public/assets/js/",
    "watch:js": "npm run babel:js && chokidar src/assets/js/ -c 'npm run babel:js'",
    "imagemin": "node imagemin.js",
    "watch:imagemin": "npm run copy:images && chokidar src/assets/img/ -c 'run-s copy:images imagemin'",
    "copy": "cpx \"src/**/*.!(pug|scss)\" \"public/\" -C",
    "copy:images": "cpx \"src/assets/img/**/*\" \"public/assets/img/\" -C",
    "server": "browser-sync start -s public/ -f public/*",
    "dev": "run-p watch:* server",
    "build": "run-s copy pug2html scss2css autoprefixer babel:js imagemin"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "browser-sync": "^2.26.13",
    "chokidar-cli": "^2.1.0",
    "core-js": "^3.8.1",
    "cpx": "^1.5.0",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "pug-cli": "github:pugjs/pug-cli#master",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.30.0"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 10",
    "Android >= 4",
    "iOS >= 9"
  ]
}
